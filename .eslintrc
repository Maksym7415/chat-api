{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb/base"
    ],
    "rules": {
        "no-plusplus": "off",
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "no-class-assign": "off",
        "no-shadow": "off",
        "max-len": [
            "error",
            200
        ],
        "no-func-assign": "off",
        "consistent-return": "off",
        "react-hooks/exhaustive-deps": "off",
        "no-nested-ternary": "off",
        "prefer-const": "off",
        "camelcase": "off",
        "import/no-unresolved": "off"
    }
}